# Úkol 1
import requests

url = input("Enter URL: ")
status_code = requests.get(url).status_code
if status_code == 200:
    print("Website works")
else:
    print(f"Website does not work (status code: {status_code})")


# Úkol 2
def divide_by_two(number1):
    print(number1 / 2)

try:
    user_input = input("Enter a number to divide by 2: ")
    divide_by_two(int(user_input))
except ValueError:
    print("Value is not a valid number")

try:
    user_input = input("Enter a number to divide by 2: ")
    divide_by_two(int(user_input))
except ValueError:
    print("Value is not a valid number")

